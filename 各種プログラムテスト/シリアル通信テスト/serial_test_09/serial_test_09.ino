void cmdline();


/****************************************************
 * グローバル変数/配列 宣言部
 ****************************************************/
int loop_num = 0;


/****************************************************
 * Arduino 要求関数部
 ****************************************************/
void setup() {
    Serial.begin(115200, SERIAL_8E1); 
    // コマンドラインのタイマー割り込みセット
    MsTimer2::set(10, cmdline);
    MsTimer2::start();
}

void loop() {
    Serial.println(loop_num++);
    Serial.println("serial_avairable");
    delay(1000);
}

