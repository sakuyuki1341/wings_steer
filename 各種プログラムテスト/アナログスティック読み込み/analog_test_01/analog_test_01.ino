int analog_x = 0;   // アナログスティックのx軸
int analog_y = 0;   // アナログスティックのy軸 

/****************************************************
 * Arduino 要求関数部
 ****************************************************/

void setup() {
    Serial.begin(9600);
}

void loop() {
    analog_x = analogRead(PIN_X);
    analog_y = analogRead(PIN_Y);
    
    Serial.print("x vector: ");
    Serial.print(analog_x);
    Serial.print("  //  y vector: ");
    Serial.println(analog_y);
    Serial.println("===============================================");

    delay(100);  // 毎秒100回処理
}

